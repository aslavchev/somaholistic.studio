# EditorConfig helps maintain consistent coding styles across editors
# https://editorconfig.org

root = true

# Default settings for all files
[*]
charset = utf-8
end_of_line = lf
indent_style = space
indent_size = 2
insert_final_newline = true
trim_trailing_whitespace = true

# Markdown files - preserve trailing spaces (used for line breaks)
[*.md]
trim_trailing_whitespace = false

# YAML files - 2 space indentation
[*.{yml,yaml}]
indent_size = 2

# JSON files - 2 space indentation
[*.json]
indent_size = 2

# Python files - 4 space indentation
[*.py]
indent_size = 4

# Makefiles - must use tabs
[Makefile]
indent_style = tab
